                <Image Grid.Column="0" x:Name="FlagImage"
                    HeightRequest="80"
                    HorizontalOptions="Center" />
                <Image Grid.Column="1" x:Name="CoatOfArmsImage"
                    HeightRequest="80"
                    HorizontalOptions="Center" />
                
                
            </Grid>
            <Label Text="Oficial:"
